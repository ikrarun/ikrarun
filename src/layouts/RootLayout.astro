---
interface Props {
  title: string;
}
import NavigationBar from "../components/NavigationBar.astro";
import "@fontsource-variable/tilt-warp";
import "@fontsource-variable/montserrat";
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<script></script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#ffffff"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="black"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>

  <body
    class="min-h-screen max-h-screen select-none dark:bg-black bg-white text-black dark:text-white flex flex-col w-screen grow"
  >
    <NavigationBar />
    <div
      class="max-h-[1080px] z-30 pt-[3rem] grow flex flex-row items-center w-full justify-center max-w-[900px] mx-auto"
    >
      <slot />
    </div>
  </body>
  <style is:global>
    * ::-webkit-scrollbar {
      display: none; /* Safari and Chrome */
    }

    * {
      -ms-overflow-style: none; /* Internet Explorer 10+ */
      scrollbar-width: none;
    }
    h1,
    h2,
    h3 {
      font-family: "Montserrat Variable", system-ui;
    }
  </style>
</html>
